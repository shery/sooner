{
  "name": "sooner",
  "version": "1.1.2",
  "description": "A simple JavaScript API for computing time from Now to A Given Time.",
  "main": "sooner.js",
  "scripts": {
    "test": "./node_modules/.bin/ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "sooner.js",
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": {
      "presets": [
        "@ava/stage-4",
        "@ava/transform-test-files"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shery15/sooner.git"
  },
  "keywords": [
    "count",
    "down",
    "time"
  ],
  "author": "shery",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shery15/sooner/issues"
  },
  "homepage": "https://github.com/shery15/sooner#readme",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-register": "^6.24.1"
  },
  "dependencies": {
    "@ava/babel-preset-stage-4": "^1.0.0",
    "@ava/babel-preset-transform-test-files": "^3.0.0"
  }
}
